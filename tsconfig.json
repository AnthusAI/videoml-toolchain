{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src/**/*.ts", "packages/**/*.ts", "packages/**/*.tsx", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
