{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@videoml/toolchain": ["src/index.ts"],
      "@videoml/toolchain/dsl": ["src/dsl/index.ts"],
      "@videoml/toolchain/*": ["src/*"],
      "@videoml/shared": ["packages/shared/src/index.ts"],
      "@videoml/renderer": ["packages/renderer/src/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src/**/*.ts", "packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": ["node_modules"]
}
