{
  "name": "@videoml/toolchain",
  "version": "0.0.0",
  "description": "VideoML toolchain: load DSL, generate timing/audio, and render videos.",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./dsl": "./src/dsl/index.ts",
    "./renderer": "./packages/renderer/src/index.ts",
    "./renderer/components/registry": "./packages/renderer/src/components/registry.ts",
    "./renderer/context": "./packages/renderer/src/context.tsx",
    "./renderer/math": "./packages/renderer/src/math.ts",
    "./shared": "./packages/shared/src/index.ts"
  },
  "types": "./src/index.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "tsc --noEmit",
    "test": "node --import tsx --test src/config.test.ts packages/shared/src/__tests__/dsl-to-script.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.699.0",
    "@xmldom/xmldom": "^0.8.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.1",
    "playwright": "1.45.0",
    "typescript": "^5.7.2"
  }
}
